# Soccer Scout UI - Production Environment Configuration
# Production-optimized settings for frontend deployment

# ===============================
# PRODUCTION CONFIGURATION
# ===============================
NODE_ENV=production

# Production API URL (UPDATE THIS BEFORE DEPLOYMENT)
NEXT_PUBLIC_API_URL=https://your-backend.railway.app

# App information
NEXT_PUBLIC_APP_NAME=Soccer Scout AI
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===============================
# PRODUCTION FEATURES
# ===============================
# Disable debug features in production
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_SHOW_API_ERRORS=false

# Enable all core features
NEXT_PUBLIC_ENABLE_CHAT_HISTORY=true
NEXT_PUBLIC_ENABLE_QUERY_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_PLAYER_CARDS=true
NEXT_PUBLIC_ENABLE_TACTICAL_QUERIES=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_MAX_QUERY_LENGTH=500

# ===============================
# PLATFORM-SPECIFIC VARIABLES
# ===============================
# These are typically set automatically by deployment platforms

# Vercel deployment (automatically set)
# VERCEL_URL=your-app.vercel.app
# VERCEL_GIT_COMMIT_SHA=commit_hash

# Custom domain (if configured)
# NEXT_PUBLIC_DOMAIN=your-custom-domain.com

# ===============================
# OPTIONAL PRODUCTION FEATURES
# ===============================
# Analytics (add your IDs)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_for_error_tracking

# CDN Configuration (optional)
# NEXT_PUBLIC_CDN_URL=https://your-cdn.com
# NEXT_PUBLIC_ASSET_PREFIX=https://your-cdn.com